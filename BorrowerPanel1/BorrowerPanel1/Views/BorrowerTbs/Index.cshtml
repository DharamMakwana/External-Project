@model BorrowerPanel1.Models.BorrowerTb

@{
    ViewData["Title"] = "Details";
}

<style>
    .transparent-on-hover {
        background-color: rgba(255, 255, 255, 0.2); /* Initial completely transparent background */
        color: white; /* Set text color to white */
        transition: background-color 0.3s ease, color 0.3s ease;
    }

        .transparent-on-hover:hover {
            background-color: rgba(255, 255, 255, 0.9); /* Slightly opaque background on hover */
            color: black; /* Change text color to black on hover */
        }

    .big-and-bold {
        font-size: 24px; /* Adjust the font size as needed */
        font-weight: bold;
    }
</style>
<div>
    <a asp-action="Index" class="back"><i class="bi bi-arrow-left"></i> </a>
</div>
<div class="container mt-5">
    <div class="slider_section">
        <div class="row">
            <div class="detail-box ">
                <center> <h1 class="big-and-bold">Manage Your Profile</h1></center>
            </div>
        </div>
    </div>
    <br />
    <br />
    <br />

    <div class="card transparent-on-hover">
        <div class="card-body d-flex justify-content-between align-items-start">
            <div class="mb-4">
                <h5 class="card-title">@Html.DisplayFor(model => model.FirstName) @Html.DisplayFor(model => model.LastName)</h5>
                <p class="card-text">
                    <strong>Email:</strong> @Html.DisplayFor(model => model.EmailId)<br />
                    <strong>Contact Number:</strong> @Html.DisplayFor(model => model.ContactNumber)<br />
                    <strong>Address:</strong> @Html.DisplayFor(model => model.Address)<br />
                </p>
            </div>
            <div class="text-right">
                <a asp-action="Edit" asp-route-id="@Model.BorrowerId" class="text-primary">Update</a>
                <a asp-action="Delete" asp-route-id="@Model.BorrowerId" class="text-danger">Deactivate</a>
            </div>
        </div>
        <div class="card-footer text-right">
            <a class="nav-link" href="/Home/Logout"><i class="bi bi-box-arrow-left"></i>&nbsp; Logout</a>
        </div>
    </div>
</div>
