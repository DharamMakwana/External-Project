
@model BorrowerPanel1.Models.RequestRental

@{
    ViewData["Title"] = "Delete";
}

<style>
    /* Center the card */
    .card-container {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 100vh;
    }

    /* Style for the card */
    .card {
        width: 80%; /* Adjust the width as needed */
        max-width: 500px;
        padding: 20px;
        border: 2px solid transparent;
        border-radius: 5px;
        background-color: rgba(255, 255, 255, 0.8); /* Transparent white background */
        transition: background-color 0.3s ease, border-color 0.3s ease; /* Add smooth transitions */
    }

    /* Add the transparent effect on hover */
    .card:hover {
        background-color: rgba(255, 255, 255, 1); /* Fully opaque white background on hover */
    }
</style>

<div class="card-container">
    <div class="card">

        <h3>Are you sure you want to delete this?</h3>
        <hr />

       

        <form asp-action="Delete">
            <input type="hidden" asp-for="ReqId" />
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            <a asp-action="Index">Back to List</a>
        </form>
    </div>
</div>
