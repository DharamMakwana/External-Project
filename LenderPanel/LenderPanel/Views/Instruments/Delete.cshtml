@model LenderPanel.Models.Instruments

@{
    ViewData["Title"] = "Delete";
}

<style>
    /* Style for the container */
    .delete-container {
        background-color: rgba(255, 255, 255, 0.8); /* Adjust the alpha value for transparency */
        padding: 20px;
        border-radius: 10px;
        margin-top: 20px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1); /* Add a subtle shadow */
    }

    /* Style for the form */
    .delete-form {
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .back {
        font-size: 30px;
        color: white;
    }
</style>

<div>
    <a asp-action="Index" class="back"><i class="bi bi-arrow-left"></i> </a>
</div>
<div class="container delete-container mt-5">
    <h3>Are you sure you want to delete this?</h3>
    <div>
       
        <form asp-action="Delete" class="delete-form">
            <input type="hidden" asp-for="InstrumentId" />
            <input type="submit" value="Delete" class="btn btn-danger" /> |
        </form>
    </div>
</div>
