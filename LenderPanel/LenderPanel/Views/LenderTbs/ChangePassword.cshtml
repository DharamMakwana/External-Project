@model LenderPanel.Models.LenderTb

@{
    ViewData["Title"] = "ChangePassword";
}

<style>
    .big-and-bold {
        font-size: 24px;
        font-weight: bold;
    }

    .password-form {
        background-color: #f8f9fa;
        padding: 20px;
        margin-top: 20px;
        border-radius: 5px;
        max-width: 400px;
        margin-left: auto;
        margin-right: auto;
    }

    .back {
        font-size: 30px;
        color: white;
    }
</style>

<div class="container mt-5">
    <div class="slider_section">
        <div class="row">
            <div class="detail-box">
                <center><h1 class="big-and-bold">Update Your Password</h1></center>
            </div>
        </div>
    </div>
    <br />
    <br />
    <div>
        <a asp-action="Index" class="back"><i class="bi bi-arrow-left"></i> </a>
    </div>

    <div class="password-form">
        <form asp-action="ChangePassword" id="changePasswordForm">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="LenderId" />

            <div class="form-group" style="display: none;">
                <label asp-for="FirstName" class="control-label">First Name</label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>

            <div class="form-group" style="display: none;">
                <label asp-for="LastName" class="control-label">Last Name</label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>

            <div class="form-group" style="display: none;">
                <label asp-for="EmailId" class="control-label"></label>
                <input asp-for="EmailId" readonly class="form-control" />
                <span asp-validation-for="EmailId" class="text-danger"></span>
            </div>

            <div class="form-group" style="display: none;">
                <label asp-for="ContactNumber" class="control-label"></label>
                <input asp-for="ContactNumber" class="form-control" />
                <span asp-validation-for="ContactNumber" class="text-danger"></span>
            </div>

            <div class="form-group" style="display: none;">
                <label asp-for="Address" class="control-label"></label>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="control-label">New Password:</label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="control-label">Confirm New Password:</label>
                <input id="confirmPassword" class="form-control" />
                <span id="confirmPasswordError" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-outline-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        document.getElementById('changePasswordForm').addEventListener('submit', function (e) {
            var newPassword = document.getElementById('Password').value;
            var confirmPassword = document.getElementById('confirmPassword').value;

            if (newPassword !== confirmPassword) {
                e.preventDefault();
                document.getElementById('confirmPasswordError').innerHTML = 'New Password and Confirm New Password must match.';
            }
        });
    </script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
