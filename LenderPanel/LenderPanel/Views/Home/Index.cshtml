@model List<LenderPanel.Models.Instruments>

@{
    ViewData["Title"] = "Instruments List";
}

<style>
    .carousel-item img {
        max-width: 100%;
        height: auto;
        border-radius: 10px; /* Add border-radius for rounded corners */
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* Add box-shadow for a subtle lift effect */
    }
    /* styles.css */

    /* Initially hide the intro */
    .intro {
        opacity: 0;
        max-height: 0;
        overflow: hidden;
        transition: opacity 0.3s ease, max-height 0.3s ease;
    }

    /* Show the intro on hover */
    .box:hover .intro {
        opacity: 1;
        max-height: 1000px; /* Set a reasonable max-height for the transition effect */
    }

    /* Keep the name, post, and p tag visible */
    .box .detail-box h5,
    .box .detail-box h6,
    .box .detail-box p.text-primary {
        opacity: 1;
        transition: opacity 0.3s ease;
    }

    .social-links i {
        color: white;
        font-size: 25px;
    }
</style>

<section class="slider_section">
    <div id="carouselExampleIndicators" class="carousel slide" style="margin-top:15%" data-ride="carousel">
        <div class="carousel-inner">
            @foreach (var instrument in Model)
            {
                <div class="carousel-item @(instrument.InstrumentId == Model.First().InstrumentId ? "active" : "")">
                    <div class="container">
                        <div class="row">
                            <div class="col-md-7">
                                <div class="detail-box">
                                    <h1>
                                        @instrument.InstrumentName <br>
                                        <span>
                                            Your Music, Your Way
                                        </span>
                                    </h1>
                                    <p>
                                        @instrument.Description
                                    </p>
                                    
                                </div>
                            </div>
                            <div class="col-md-5">
                                <img src="@instrument.Image" class="img-fluid" alt="Instrument Image">
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
        <div class="container indicator_container">
            <ol class="carousel-indicators">
                @for (int i = 0; i < Model.Count; i++)
                {
                    <li data-target="#carouselExampleIndicators" data-slide-to="@i" class="@(i == 0 ? "active" : "")"></li>
                }
            </ol>
        </div>
    </div>
</section>
